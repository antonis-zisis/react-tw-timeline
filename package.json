{
  "name": "react-tw-timeline",
  "version": "0.1.1",
  "description": "A vertical center-line timeline component for React + Tailwind CSS with scroll-triggered animations and dark mode support",
  "keywords": [
    "react",
    "tailwindcss",
    "timeline",
    "component",
    "framer-motion"
  ],
  "license": "MIT",
  "author": "Antonis Zisis",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"stories/**/*.{ts,tsx,css}\" \".storybook/**/*.ts\""
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@storybook/react": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "framer-motion": "^12.4.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^10.2.8",
    "tailwindcss": "^4.0.9",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
